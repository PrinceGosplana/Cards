@model IEnumerable<StoreCard.Models.Card>

@{
    ViewBag.Title = "SearchId";
}
<h2>
    Card found</h2>

<table>
    <tr>
        <th>
            Amount
        </th>
        <th>
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.ActionLink("Buy", "AddToCard", new { id = item.CardId })
            </td>
        </tr>
    }
</table>